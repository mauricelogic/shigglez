<div class="col-md-6 col-md-offset-3">
  <div class="index">
    <div class="span11">
      <div class="row">

<div>
<div style ="float:left;">
          <p id="notice"><%= notice %></p>
          
              <div class="restroom-header">

                <div class="restroom-rating">
                   <h2><%= @venue.name %></h2>

                </div>
              </div>

              <div style= "float:left; clear:both;">
                <address>
                <%= @venue.address %></br>
                <%= @venue.city %> <%= @venue.state %></br>
                <%= @venue.venue_id %> 
                </address>
                  Category:</br>      
                  <%= "No Category"%>
                </div>

  </div>




</div>

    <div style= "float:right;">
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=250x250&sensor=false&zoom=17&markers=#{@venue.lat}%2C#{@venue.long}" %>
    </div>

        </div>

  </div>



<%= link_to 'Back', venues_path %>
</div>
  <div class="index" style="float:left;clear:both;">
  
  <div class="span11">
    <div class="row">
<h3>Latest Reviews</h3>

<%= render :partial => @venue.reviews %>
</div>

</div>
</div>
  <div style="float:left;clear:both;">
<h3>Add your review:</h3>
<%= simple_form_for ([ @venue, Review.new ]) do |f| %>

<% if user_signed_in? %>
<div class="new-comment">
<div class="row">
  <div class="span8">
  <strong>Hello </strong><%= current_user.profile_name %>
  </div>



<div class="span6">
 <h4>What is your overall rating for this restroom? </h4>
 <%#= rating_for @restroom %>
</div>



<div class="span8">
</br>
    <%= f.input :title, :input_html => {:class =>"span6", :height => "25px", rows: 1} %>

</div>



  <div class="span8">
    <h4><%= f.label :your_review %></h4>
    <%= f.input :content, label: false, :input_html => {:class =>"span8", rows: 8, :placeholder => "Enter your review here..."}%>
  </div>

</div>
</div>
    <div class="field">
    <h4>Do you have a photo to share? </h4> 
    <%= f.input :image, label: false %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit your review', :class => 'btn btn-primary' %>
  </div>
<%else%>
   <p>Please <%= link_to "register", new_user_registration_path %> or <%= link_to "log in", new_user_session_path %> to post a review.</p>
<% end %>

<% end %>
</div>
</div>
