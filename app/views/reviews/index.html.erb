<div class="page-header">
  <h1>Restroom reviews</h1>
</div>

<% @reviews.each do |review| %>
<div class="review">
  <strong><%= review.title %></strong>
  <p><%= review.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(review.created_at) + " ago", review %> |
  <span class="admin">
    <%= link_to 'Edit', edit_review_path(review) %> |
    <%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %>
  </span>
</div>
</div>
<% end %>

<br />

<%= link_to 'New Review', new_review_path, class: "btn btn-success" %>
